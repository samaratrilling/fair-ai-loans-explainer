.slide-content
  background-color #FFFFFF
  color $purple
  font-family 'Work Sans', sans-serif

  padding 25px

  +mq('bp-5')
    width 50%
    margin 0 auto

  h2
    font-size 20px
    font-family 'Chivo', sans-serif

  p
    font-size 16px
    text-align left

.simulation-content
  max-width 960px
  max-height 700px
  margin 0 auto
  padding-left 50px
  padding-right 50px
  
  & p
    font-size 16px
    text-align left
    font-family 'Work Sans', sans-serif
    color $purple


/* SIMULATION 1 STYLES */
#simulation1-container
    display inline-block
    width 100%

#simulation1-controls
  display flex
  justify-content space-between
  margin-top 25px

.sim1-slider-container
  width 45%
  color $purple
  font-family 'Work Sans', sans-serif


// space for label
.noUi-target 
    margin-top 10px
// Push text of pips down so they don't overlap with the lines
.noUi-value-horizontal
  padding-top 5px


/* SIMULATION 2 STYLES */
#simulation2-container
  display flex
  flex-wrap wrap

  .precinct-container
    width 20%

#slider-container
  margin-bottom 25px
  color $purple
  font-family 'Chivo', sans-serif
