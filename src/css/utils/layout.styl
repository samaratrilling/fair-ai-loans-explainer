// -------------------
// Layouts
// -------------------

body
	font-feature-settings 'kern' 1, 'onum' 0, 'liga' 0, 'tnum' 1
	-webkit-font-smoothing antialiased
	-webkit-tap-highlight-color rgba(0,0,0,0)
	background-color $bg
	color #5D5D5D
	font-weight 500
	font-family $serif
	set-type-size(root, false)
	+mq('bp-3')
		set-type-size(medium, false)

h1
	font-family 'Chivo'
	font-size 30px
	margin-top 1.5rem
h2
	font-family 'Chivo'
	font-size 20px
	margin-top 1rem
h3
	font-family 'Chivo'
	font-size 18px
	margin-top 1.5rem
h4
	set-type-size(medium, true)
	margin-top 1.5rem
h5
	set-type-size(root, true)
	margin-top 1.5rem
h6
	set-type-size(small, true)
	margin-top 1.5rem
p
	margin 1.25rem 0
	font-size 16px
	+mq('bp-3')
		set-type-size(medium, true)

a
	text-decoration none
	border-bottom 1px solid #7DCDD2
	color #7DCDD2
	&:visited, &:hover
		color $fg

strong, b
	font-weight 700

em, i
	font-style italic

ol, ul
	padding-left 50px
	text-align left
	font-size 16px

li
	font-size inherit
	//set-type-size(root, false)
	//+mq('bp-3')
		//set-type-size(medium, false)
	padding-bottom 5px
	padding-top 5px

img, video
	display block
	width 100%

button
	cursor pointer
	border none
	outline none
	margin 0
	padding 0
	set-type-size(root, false)
	+mq('bp-3')
		set-type-size(medium, false)

sub, sup
	font-size 0.75rem
	line-height 0
	position relative
	vertical-align baseline

sup
	top -0.5em

sub
	bottom -0.25em
