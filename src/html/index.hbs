<!doctype html>
<html lang='en' data-version='{{timestamp}}'>

<head>

	{{> base/meta}}

	<link inline rel='stylesheet' href='bundle.css' />

	{{> base/font}}


	<script inline src='head.js'></script>

	{{> base/analytics }}

	<style type="text/css">
		/* 13. Basic Styling with CSS */

		/* Style the lines by removing the fill and applying a stroke */
		.line {
			fill: none;
			stroke: #ffab00;
			stroke-width: 3;
		}

		.overlay {
			fill: none;
			pointer-events: all;
		}

		/* Style the dots by assigning a fill and stroke */
		.dot {
			fill: #ffab00;
			stroke: #fff;
		}

		.focus circle {
			fill: none;
			stroke: steelblue;
		}

	</style>
</head>

<body>

	{{> base/header 'sticky'}}

	<main id='content'>

		{{> story/intro }}
		{{> base/simulation1 }}
		{{> base/simulation2 }}



	</main>




	<script src='{{basepath}}assets/scripts/d3.v5.11.0.min.js'></script>
	<script src='main.js?version={{timestamp}}' async></script>
</body>

</html>
